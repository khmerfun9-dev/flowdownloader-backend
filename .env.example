# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# File Storage Configuration
MAX_FILE_SIZE=500MB
UPLOAD_DIR=./uploads
DOWNLOAD_DIR=./downloads
OUTPUT_DIR=./output

# FFmpeg Configuration
FFMPEG_PATH=auto
FFPROBE_PATH=auto

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Conversion Settings
DEFAULT_VIDEO_QUALITY=720p
DEFAULT_AUDIO_BITRATE=192k
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac

# Cleanup Configuration
FILE_CLEANUP_INTERVAL_HOURS=1
FILE_MAX_AGE_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security & JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database (Optional - for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/flowdownloader
# REDIS_URL=redis://localhost:6379

# External APIs (Optional)
# YOUTUBE_API_KEY=your-youtube-api-key
# FACEBOOK_APP_ID=your-facebook-app-id
# INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Payment Integration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# License Configuration
LICENSE_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Download Limits (per day)
FREE_DOWNLOAD_LIMIT=5
BASIC_DOWNLOAD_LIMIT=50
PRO_DOWNLOAD_LIMIT=500
UNLIMITED_DOWNLOAD_LIMIT=999999